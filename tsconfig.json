{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "module": "commonjs",
        "lib": ["esnext", "dom", "es6"],
        "allowJs": false,
        "noEmit": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": ".dist",
        "declaration": true,
        "isolatedModules": false,
        "sourceMap": true,
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "~core/*": ["src/core/*"]
        }
    },
    "files": ["types.d.ts"],
    "include": ["src/**/*.ts", "types.d.ts"],
    "exclude": [
        "node_modules",
        ".eslintrc.js",
        ".jestrc.js",
        "babel.config.js",
        "prettier.config.js",
        "ormconfig.ts"
    ]
}
